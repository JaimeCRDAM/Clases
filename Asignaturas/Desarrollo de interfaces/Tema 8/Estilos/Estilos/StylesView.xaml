<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Estilos.StylesView"
             Title="StylesView">
    <ContentPage.Resources>
        <Style TargetType="Button" Class="ButtonText">
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
        <Style TargetType="Button" Class="LightButton">
            <Setter Property="BackgroundColor" Value="LightGray"/>
            <Setter Property="TextColor" Value="Black"/>
        </Style>
        <Style TargetType="Button" Class="DarkBurron">
            <Setter Property="BackgroundColor" Value="Purple"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Button Text="Button" StyleClass="ButtonText, DarkButton"/>
        <Button Text="Light Button" StyleClass="ButtonText, LightButton"/>
    </VerticalStackLayout>
</ContentPage>
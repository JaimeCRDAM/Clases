<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sqlite.MVVM.Views.MainPage"
             Title="MainPage">
    <Grid RowDefinitions=".3*, .7*">
        <VerticalStackLayout>
            <Entry Placeholder="Name"
                   Text="{Binding CurrentCustomer.Name}"/>
            <Entry Placeholder="Address"
                   Text="{Binding CurrentCustomer.Address}"/>
            <Button Text="Add or Update"
                    Command="{Binding AddOrUpdateCommand}"/>
            <Button Text="Delete"
                    Command="{Binding DeleteCommand}" BackgroundColor="Red"/>
        </VerticalStackLayout>
        <CollectionView Grid.Row="1" ItemsSource="{Binding Customers}" SelectionMode="Single" SelectedItem="{Binding CurrentCustomer}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,*">
                        <Label Text="{Binding Name}"/>
                        <Label Grid.Column="1" Text="{Binding Address}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Estilos.DynamicStyleView">
    <ContentPage.Resources>
        <Style TargetType="Button" x:Key="greenStyle">
            <Setter Property="BackgroundColor" Value="DarkGreen"/>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Button Text="LOGIN"/>
        <Button Text="Visit Website"/>
        <Button Text="ChangeStyle" Style="{DynamicResource dynamicStyle}" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>

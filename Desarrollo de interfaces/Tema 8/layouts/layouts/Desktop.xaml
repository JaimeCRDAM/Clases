<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="layouts.Desktop"
             Title="Desktop">
    <Grid RowDefinitions=".2*,*, .3*, .3*,.3*" ColumnDefinitions="*, *, *, *">
        <Label Text="Label 1" Grid.Row="0" Grid.Column="0" BackgroundColor="Blue"/>
        <Label Text="Label 2" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" BackgroundColor="Pink" />
        <Label Text="Label 3" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" BackgroundColor="DeepSkyBlue" />
        <Label Text="Label 4" Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="Blue"/>
        <Label Grid.Row="2" Grid.RowSpan="2" Grid.Column="2" BackgroundColor="White"/>
        <Label Grid.Row="2" Grid.Column="4" BackgroundColor="LightBlue"/>
        <Label Grid.Row="3" Grid.Column="4" BackgroundColor="Green"/>
        <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" BackgroundColor="Yellow"/>
    </Grid>
</ContentPage>